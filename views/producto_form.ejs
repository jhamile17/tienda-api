<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Nuevo Producto</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2>Nuevo Producto</h2>

    <% if (typeof session !== 'undefined' && session.user) { %>
      <form method="POST" action="/productos/nuevo">
        <!-- Nombre -->
        <div class="mb-3">
          <label for="nombre" class="form-label">Nombre</label>
          <input type="text" class="form-control" id="nombre" name="nombre" value="<%= producto?.nombre || '' %>" required>
        </div>

        <!-- Precio -->
        <div class="mb-3">
          <label for="precio" class="form-label">Precio</label>
          <input type="number" class="form-control" id="precio" name="precio" value="<%= producto?.precio || '' %>" required>
        </div>

        <!-- Categoría (select con nombres) -->
        <div class="mb-3">
          <label for="categoria" class="form-label">Categoría</label>
          <select class="form-control" id="categoria" name="categoria" required>
            <% categorias.forEach(cat => { %>
              <option value="<%= cat.nombre %>"><%= cat.nombre %></option>
            <% }) %>
          </select>
        </div>

        <!-- Botones -->
        <button type="submit" class="btn btn-success">Crear</button>
        <a href="/productos" class="btn btn-secondary">Cancelar</a>
      </form>
    <% } else { %>
      <div class="alert alert-info">Debes iniciar sesión para crear un producto.</div>
    <% } %>
  </div>
</body>
</html>
