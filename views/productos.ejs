<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Productos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .producto-card {
      height: 100%;
    }
    .producto-card img {
      height: 200px;
      object-fit: cover;
      width: 100%;
    }
    .card {
      height: 100%;
      transition: transform 0.2s;
    }
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>
  <div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Productos</h1>
      <% if (session && session.user) { %>
        <a href="/productos/nuevo" class="btn btn-success">Agregar Producto</a>
      <% } %>
    </div>

    <!-- FORMULARIO DE FILTROS -->
    <form method="GET" action="/productos" class="mb-4">
      <div class="row g-3">
        <div class="col-md-3">
          <input type="text" name="nombre" placeholder="Buscar por nombre" class="form-control" value="<%= nombre %>">
        </div>
        <div class="col-md-2">
          <input type="number" name="precio_min" placeholder="Precio mínimo" class="form-control" value="<%= precio_min %>">
        </div>
        <div class="col-md-2">
          <input type="number" name="precio_max" placeholder="Precio máximo" class="form-control" value="<%= precio_max %>">
        </div>
        <div class="col-md-3">
          <select name="categoria" class="form-control">
            <option value="">Todas las categorías</option>
            <% categorias.forEach(cat => { %>
              <option value="<%= cat.nombre %>" <%= categoria === cat.nombre ? 'selected' : '' %>><%= cat.nombre %></option>
            <% }) %>
          </select>
        </div>
        <div class="col-md-2">
          <button type="submit" class="btn btn-primary w-100">Filtrar</button>
        </div>
      </div>
    </form>

    <!-- LISTA DE PRODUCTOS -->
    <div class="row">
      <% productos.forEach(prod => { %>
        <div class="col-md-4 mb-4">
          <div class="card producto-card">
            <% if (prod.imagen_url) { %>
              <img src="<%= prod.imagen_url %>" class="card-img-top" alt="<%= prod.nombre %>">
            <% } else { %>
              <img src="/uploads/default.png" class="card-img-top" alt="Sin imagen">
            <% } %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= prod.nombre %></h5>
              <p class="card-text text-primary fw-bold">$<%= prod.precio.toFixed(2) %></p>
              <p class="card-text"><small class="text-muted">Categoría: <%= prod.categoria || 'Sin categoría' %></small></p>
              <div class="mt-auto">
                <a href="/productos/<%= prod.id %>" class="btn btn-info w-100 mb-2">Ver Detalle</a>
                <% if (session && session.user) { %>
                  <div class="d-flex gap-2">
                    <a href="/productos/editar/<%= prod.id %>" class="btn btn-warning flex-grow-1">Editar</a>
                    <form action="/productos/eliminar/<%= prod.id %>" method="POST" class="d-inline flex-grow-1" onsubmit="return confirm('¿Seguro que deseas eliminar este producto?');">
                      <button type="submit" class="btn btn-danger w-100">Eliminar</button>
                    </form>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
      <% if (productos.length === 0) { %>
        <div class="col-12">
          <div class="alert alert-info text-center">
            <i class="bi bi-info-circle me-2"></i>
            No se encontraron productos con los filtros seleccionados.
          </div>
        </div>
      <% } %>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"></script>
</body>
</html>
