<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Productos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .producto-card img {
      max-height: 150px;
      object-fit: cover;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h1>Productos</h1>

    <!-- FORMULARIO DE FILTROS -->
    <form method="GET" action="/productos" class="mb-4 d-flex gap-2 flex-wrap">
      <input type="text" name="nombre" placeholder="Buscar por nombre" class="form-control" value="<%= nombre %>">

      <input type="number" name="precio_min" placeholder="Precio mínimo" class="form-control" value="<%= precio_min %>">
      <input type="number" name="precio_max" placeholder="Precio máximo" class="form-control" value="<%= precio_max %>">

      <select name="categoria" class="form-control">
        <option value="">Todas las categorías</option>
        <% categorias.forEach(cat => { %>
          <option value="<%= cat.nombre %>" <%= categoria === cat.nombre ? 'selected' : '' %>><%= cat.nombre %></option>
        <% }) %>
      </select>

      <button type="submit" class="btn btn-primary">Filtrar</button>
      <% if (session && session.user) { %>
        <a href="/productos/nuevo" class="btn btn-success">Agregar Producto</a>
      <% } %>
    </form>

    <!-- LISTA DE PRODUCTOS -->
    <div class="row">
      <% productos.forEach(prod => { %>
        <div class="col-md-4 mb-4">
          <div class="card producto-card">
            <% if (prod.imagen_url) { %>
              <img src="<%= prod.imagen_url %>" class="card-img-top" alt="<%= prod.nombre %>">
            <% } else { %>
              <img src="/uploads/default.png" class="card-img-top" alt="Sin imagen">
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= prod.nombre %></h5>
              <p class="card-text">Precio: $<%= prod.precio.toFixed(2) %></p>
              <p class="card-text">Categoría: <%= prod.categoria || 'Sin categoría' %></p>
              <a href="/productos/<%= prod.id %>" class="btn btn-info">Ver Detalle</a>
              <% if (session && session.user) { %>
                <a href="/productos/editar/<%= prod.id %>" class="btn btn-warning">Editar</a>
                <form action="/productos/eliminar/<%= prod.id %>" method="POST" class="d-inline" onsubmit="return confirm('¿Seguro que deseas eliminar este producto?');">
                  <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
      <% if (productos.length === 0) { %>
        <div class="col-12">
          <p class="text-center">No se encontraron productos con los filtros seleccionados.</p>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
