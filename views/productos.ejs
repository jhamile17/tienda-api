<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Lista de Productos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('header') %>

  <div class="container mt-5">
    <h2 class="mb-4">Productos</h2>

    <!-- Formulario de filtro por categoría -->
    <form method="get" action="/productos" class="mb-4">
      <div class="row">
        <div class="col-md-4">
          <select name="categoria_id" class="form-select" onchange="this.form.submit()">
            <option value="">Todas las categorías</option>
            <% categorias.forEach(cat => { %>
              <option value="<%= cat.id %>" <%= categoria_id == cat.id ? 'selected' : '' %>><%= cat.nombre %></option>
            <% }); %>
          </select>
        </div>
      </div>
    </form>

    <div class="row">
      <% productos.forEach(producto => { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <% if (producto.imagen_url) { %>
              <img src="<%= producto.imagen_url %>" class="card-img-top" alt="<%= producto.nombre %>">
            <% } else { %>
              <img src="/img/no-image.png" class="card-img-top" alt="Sin imagen">
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= producto.nombre %></h5>
              <p class="card-text">Precio: $<%= producto.precio %></p>
              <a href="/productos/<%= producto.id %>" class="btn btn-primary">Ver Detalle</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
