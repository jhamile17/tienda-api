<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Productos de <%= categoria.nombre %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .producto-card {
      height: 100%;
    }
    .producto-card img {
      height: 200px;
      object-fit: cover;
      width: 100%;
    }
    .card {
      height: 100%;
      transition: transform 0.2s;
    }
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>
  <div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Productos de <%= categoria.nombre %></h2>
      <div>
        <a href="/productos" class="btn btn-secondary me-2">Volver a Productos</a>
        <% if (typeof session !== 'undefined' && session.user) { %>
          <a href="/productos/nuevo?categoria_id=<%= categoria.id %>" class="btn btn-success">Agregar Producto</a>
        <% } %>
      </div>
    </div>

    <div class="row">
      <% productos.forEach(function(producto) { %>
        <div class="col-md-4 mb-4">
          <div class="card producto-card">
            <% if (producto.imagen_url) { %>
              <img src="<%= producto.imagen_url %>" class="card-img-top" alt="<%= producto.nombre %>">
            <% } else { %>
              <img src="/uploads/default.png" class="card-img-top" alt="Sin imagen">
            <% } %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= producto.nombre %></h5>
              <p class="card-text text-primary fw-bold">$<%= producto.precio.toFixed(2) %></p>
              <div class="mt-auto">
                <a href="/productos/<%= producto.id %>" class="btn btn-info w-100 mb-2">Ver Detalle</a>
                <% if (typeof session !== 'undefined' && session.user) { %>
                  <div class="d-flex gap-2">
                    <a href="/productos/editar/<%= producto.id %>" class="btn btn-warning flex-grow-1">Editar</a>
                    <form action="/productos/eliminar/<%= producto.id %>" method="POST" class="d-inline flex-grow-1" onsubmit="return confirm('¿Seguro que deseas eliminar este producto?');">
                      <button type="submit" class="btn btn-danger w-100">Eliminar</button>
                    </form>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
      
      <% if (productos.length === 0) { %>
        <div class="col-12">
          <div class="alert alert-info text-center">
            <i class="bi bi-info-circle me-2"></i>
            No hay productos en esta categoría.
          </div>
        </div>
      <% } %>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"></script>
</body>
</html>
